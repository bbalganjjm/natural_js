{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": ["./@types"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true
  },
  "include": [
    "./src/**/*",
    "./@types/**/*"
  ]
}